# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines
[*]
charset = utf-8
end_of_line = lf

# 4 space indentation
[*.{js,css,scss,php,xml}]
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation
[*.{htm,html}]
indent_size = 4
indent_style = tab
trim_trailing_whitespace = true
